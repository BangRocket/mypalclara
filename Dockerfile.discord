# Discord Bot Dockerfile for MyPalClara v0.8.0 (LangGraph Architecture)
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    git \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Install Poetry
RUN pip install poetry

# Copy dependency files
COPY pyproject.toml poetry.lock* ./

# Configure Poetry to not create virtual environment
RUN poetry config virtualenvs.create false

# Install dependencies (production only, --no-root skips installing the project itself)
RUN poetry install --only main --no-root --no-interaction --no-ansi

# Install Playwright browsers and dependencies (optional, for browser faculty)
RUN playwright install chromium --with-deps || true

# Copy application code
COPY discord_bot_v2.py ./
COPY src/ ./src/
COPY personalities/ ./personalities/
COPY scripts/ ./scripts/

# Clone Cortex (submodule not available in Railway builds)
RUN git clone --depth 1 https://github.com/BangRocket/cortex.git lib/cortex

# Copy VERSION if it exists
COPY VERSION* ./

# Create directories for persistent data
RUN mkdir -p /data /app/clara_files
ENV DATA_DIR=/data
ENV CLARA_FILES_DIR=/app/clara_files

# Add src to Python path
ENV PYTHONPATH=/app/src:/app/lib/cortex/src:$PYTHONPATH

# Expose ports (metrics + monitor)
EXPOSE 8001 9090

# Run the Discord bot (v2 LangGraph architecture)
CMD ["python", "discord_bot_v2.py"]
