# Clara Sandbox Container Image
# Pre-configured Python environment for secure code execution

FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    # Basic tools
    curl \
    wget \
    git \
    unzip \
    tar \
    gzip \
    bzip2 \
    jq \
    ca-certificates \
    gnupg \
    # Build tools (for compiling Python packages)
    build-essential \
    libffi-dev \
    libssl-dev \
    libxml2-dev \
    libxslt1-dev \
    # Playwright browser dependencies
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libpango-1.0-0 \
    libasound2 \
    libatspi2.0-0 \
    # Image processing
    libpng-dev \
    libjpeg-dev \
    && rm -rf /var/lib/apt/lists/*

# Install Node.js 20 LTS for Claude Code CLI
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Install Claude Code CLI globally
RUN npm install -g @anthropic-ai/claude-code

# Pre-install common Python packages (optimized for token efficiency)
# These packages are pre-baked to avoid repeated pip install calls
RUN pip install --no-cache-dir \
    # Core
    pip \
    setuptools \
    wheel \
    # HTTP & Networking
    requests>=2.31.0 \
    httpx>=0.25.0 \
    aiohttp>=3.9.0 \
    urllib3>=2.1.0 \
    websockets>=12.0 \
    # Parsing & Scraping
    beautifulsoup4>=4.12.0 \
    lxml>=5.0.0 \
    html5lib>=1.1 \
    selectolax>=0.3.0 \
    # Data & Analysis
    pandas>=2.1.0 \
    numpy>=1.26.0 \
    scipy>=1.11.0 \
    # Visualization
    matplotlib>=3.8.0 \
    seaborn>=0.13.0 \
    pillow>=10.1.0 \
    # Config & Serialization
    pyyaml>=6.0.0 \
    toml>=0.10.0 \
    python-dotenv>=1.0.0 \
    orjson>=3.9.0 \
    # CLI & Formatting
    rich>=13.7.0 \
    tabulate>=0.9.0 \
    click>=8.1.0 \
    typer>=0.9.0 \
    # Date & Time
    python-dateutil>=2.8.0 \
    arrow>=1.3.0 \
    # Utilities
    tqdm>=4.66.0 \
    more-itertools>=10.1.0 \
    pydantic>=2.5.0 \
    # Async
    anyio>=4.2.0 \
    trio>=0.23.0 \
    # Testing
    pytest>=7.4.0 \
    # Browser automation
    playwright

# Install Playwright browsers (Chromium only to save space)
RUN playwright install chromium --with-deps

# Create non-root user for security
RUN useradd -m -s /bin/bash sandbox \
    && mkdir -p /workspace \
    && chown -R sandbox:sandbox /workspace

# Set working directory
WORKDIR /workspace

# Switch to non-root user
USER sandbox

# Keep container running
CMD ["tail", "-f", "/dev/null"]
