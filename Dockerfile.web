# Web Interface Dockerfile for MyPalClara
# Multi-stage: Node build for frontend + Python runtime for backend

# Stage 1: Build frontend
FROM node:22-slim AS frontend-builder

WORKDIR /build

# Install pnpm
RUN corepack enable && corepack prepare pnpm@latest --activate

# Copy frontend dependency files
COPY web-ui/package.json web-ui/pnpm-lock.yaml* ./

# Install dependencies
RUN pnpm install --frozen-lockfile 2>/dev/null || pnpm install

# Copy frontend source
COPY web-ui/ ./

# Build
RUN pnpm build

# Stage 2: Python runtime
FROM python:3.12-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Install Poetry
RUN pip install poetry

# Copy dependency files
COPY pyproject.toml poetry.lock* ./

# Configure Poetry to not create virtual environment
RUN poetry config virtualenvs.create false

# Install dependencies (production only)
RUN poetry install --only main --no-interaction --no-ansi

# Copy application code
COPY mypalclara/ ./mypalclara/
COPY VERSION ./

# Copy built frontend from stage 1
COPY --from=frontend-builder /build/dist/ ./web-ui/dist/

# Create directories for persistent data
RUN mkdir -p /data /app/clara_files
ENV DATA_DIR=/data
ENV CLARA_FILES_DIR=/app/clara_files

# Set static dir for FastAPI to serve frontend
ENV WEB_STATIC_DIR=/app/web-ui/dist

# Expose web port
EXPOSE 8000

# Run the web server
CMD ["python", "-m", "mypalclara.web"]
